<head>
    <title>Trashing Blogs</title>
</head>
<body>
    <main class="main_index">
        
        <div class="body-container">
            <div class="column"></div>
            <div class="body-main">
                <header>
                    <h1 id="welcome">Welcome to TrashingBlogs</h1>
                    <% if current_user.present? && current_user.profile.present? %>
                        <%= link_to user_profile_path(current_user, current_user.profile) do %>
                            <% if current_user.profile.avatar.attached? %>
                                <%= image_tag current_user.profile.avatar, :class => "profile-picture-logo" %>
                            <% else %>
                                <%= image_tag("https://www.eyedocs.co.uk/components/com_community/assets/user-anon.png", :class => "profile-picture-logo") %>
                            <% end %>
                        <% end %>
                    <% end %>
                    <% if current_user %>
                        <span class="logout-info">
                            logged in as <%= current_user.name %>
                            <%= link_to "Log Out", logout_path %>
                        </span>
                    <% else %>
                        <span class="login-info">
                            <%= link_to "Sign Up", signup_path %> or
                            <%= link_to "Log In", login_path %>
                        </span>
                    <% end %>
                    <ul id="navPane">
                        <li><%= link_to'Home', root_path, :style=>'font-family: "Times New Roman"; color: white'%></li>
                        <li><%= link_to'Feed', articles_path, :style=>'font-family: "Times New Roman"; color: white'%></li>
                        <li><%= link_to'Article List', articles_path, :style=>'font-family: "Times New Roman"; color: white'%></li>
                        <% if current_user.present? %>
                            <li><%= link_to'Settings', user_path(current_user), :style=>'font-family: "Times New Roman"; color: white'%></li>
                        <% end %>
                    </ul>
                </header>
            <div id="home-main">
                <img id="home-main-left"src="https://cdn.discordapp.com/attachments/671777843776323584/697862767507537920/15d.jpg" alt="welcome" height="100" width="100">
                <div id="home-main-right">
                    <h1>Check out these blog users!</h1>
                    <div class="profile-container">
                        <h2><%= User.find(7).name %></h2>
                        <%= link_to user_profile_path(User.find(7), User.find(7).profile) do %>
                            <%= image_tag User.find(7).profile.imageurl, :class => "profile-picture-embed" %>
                        <% end %>
                    </div>
                    <div class="profile-container">
                        <h2><%= User.find(22).name %></h2>
                        <%= link_to user_profile_path(User.find(22), User.find(22).profile) do %>
                            <%= image_tag User.find(22).profile.imageurl, :class => "profile-picture-embed" %>
                        <% end %>
                    </div>
                    <div class="profile-container">
                        <h2><%= User.find(22).name %></h2>
                        <%= link_to user_profile_path(User.find(22), User.find(22).profile) do %>
                            <%= image_tag User.find(22).profile.imageurl, :class => "profile-picture-embed" %>
                        <% end %>
                    </div>
                    <div class="profile-container">
                        <h2><%= User.find(26).name %></h2>
                        <%= link_to user_profile_path(User.find(26), User.find(26).profile) do %>
                            <%= image_tag User.find(26).profile.imageurl, :class => "profile-picture-embed" %>
                        <% end %>
                    </div>
                </div>
            </div>
            
            <div id="welcome-msg">
                <% if current_user.present? %>
                    <h1>Hello, <%= current_user.name %><br></h1>
                <% else %>
                    <h1>Welcome to TrashingBlogs!</h1>
                    <h1>Make an account to access cool features!</h1>
                <% end %>
            </div>
            </div>
            <div class="column"></div>
            </div>
        
    </main>
</body>