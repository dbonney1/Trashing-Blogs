<h1>New Report</h1>
<%= form_for :abuse_report, url: article_abuse_reports_path(@article.id) do |f| %>
    <p>
        <%= f.label :reason %><br>
        <%= f.text_field :reason %><br>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>  
    </p>
 <% end %>
    